{
  "name": "tsukuru",
  "version": "0.7.0",
  "description": "Enables you to build a TypeScript package that's compatible with both CommonJS and ES Modules",
  "keywords": [
    "esm",
    "module",
    "commonjs",
    "typescript",
    "tsc",
    "library",
    "package",
    "hybrid"
  ],
  "main": "lib",
  "types": "lib",
  "bin": "lib/cli.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-fischer/tsukuru.git"
  },
  "author": "Daniel Fischer <daniel@d-fischer.dev>",
  "funding": "https://github.com/sponsors/d-fischer",
  "license": "MIT",
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/errors": "^1.3.3",
    "@oclif/plugin-help": "^2.2.3",
    "@types/node": "^12.12.14",
    "@types/rimraf": "^3.0.0",
    "chalk": "^4.1.0",
    "ora": "^5.1.0",
    "rimraf": "^3.0.2",
    "tslib": "^2.0.3"
  },
  "peerDependencies": {
    "typescript": "~4.0.2"
  },
  "devDependencies": {
    "@d-fischer/eslint-config": "^2.0.6",
    "eslint": "^7.10.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "typescript": "~4.0.3"
  },
  "files": [
    "LICENSE",
    "README.md",
    "lib"
  ],
  "scripts": {
    "lint": "eslint --ext ts src",
    "prettier:check": "prettier --check 'src/**'",
    "prettier:fix": "prettier --write 'src/**'",
    "build": "tsc",
    "rebuild": "rimraf lib && yarn run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json}": "prettier --write",
    "*.{ts}": "eslint --fix"
  }
}
